<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.example.macbook.box2homeclient.fragments.nav_fragments.ProfilFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/line1"

     android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/driver_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="6dp"
         >

      <com.example.macbook.box2homeclient.circularimageview.CircularImageView
          android:id="@+id/imUser"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="4dp"
          android:background="@drawable/user_profile_image_background"


          android:elevation="4dp"
          />

      <LinearLayout
          android:id="@+id/form"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/imUser"
          android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" "
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray">
        <com.example.macbook.box2homeclient.custom.CustomEditText
            android:id="@+id/edt_nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:drawableLeft="@mipmap/user"
            android:drawablePadding="16dp"
            android:paddingBottom="16dp"
            android:textColorHint="@android:color/darker_gray"
            android:paddingLeft="16dp"
            android:hint="nom" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" "
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray">
        <com.example.macbook.box2homeclient.custom.CustomEditText
            android:id="@+id/edt_groupe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/group"
            android:drawablePadding="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16dp"
            android:hint="nom" />
      </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" "
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray">
        <com.example.macbook.box2homeclient.custom.CustomEditText
            android:id="@+id/edt_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_msg"
            android:drawablePadding="16dp"
            android:paddingBottom="16dp"
            android:textColorHint="@android:color/darker_gray"
            android:paddingLeft="16dp"
            android:textSize="16dp"
            android:hint="nom" />
    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" "
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray">
        <com.example.macbook.box2homeclient.custom.CustomEditText
            android:id="@+id/edt_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/phone"
            android:textColorHint="@android:color/darker_gray"
            android:drawablePadding="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:textSize="16dp"
            android:hint="nom" />
  </android.support.design.widget.TextInputLayout>
      </LinearLayout>


      <!--LinearLayout
          android:id="@+id/line"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@+id/form"
          android:layout_marginBottom="16dp"
          android:layout_marginTop="16dp"
          android:orientation="vertical"
          android:background="@color/colorgrey">

      </LinearLayout-->

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/form"
          android:layout_marginTop="16dp"
          android:orientation="vertical">

        <com.example.macbook.box2homeclient.custom.CustomTextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textSize="16dp"
            android:text="Changer votre mot de passe"
            android:textColor="@android:color/background_dark" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" "
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray">
        <com.example.macbook.box2homeclient.custom.CustomEditText
            android:id="@+id/edt_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/locked"
            android:textColorHint="@android:color/darker_gray"
            android:drawablePadding="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:textSize="16dp"
            android:hint="@string/nouveau_pwd" />
      </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" "
            android:textColor="@android:color/darker_gray"
            android:textColorHint="@android:color/darker_gray">
        <com.example.macbook.box2homeclient.custom.CustomEditText
            android:id="@+id/edt_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/locked"
            android:textColorHint="@android:color/darker_gray"
            android:drawablePadding="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:textSize="16dp"
            android:hint="@string/confirm_pwd" />
</android.support.design.widget.TextInputLayout>
      </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/colorroze"
        app:srcCompat="@drawable/checked" />
  </LinearLayout>

  </RelativeLayout>
</ScrollView>
</FrameLayout>
